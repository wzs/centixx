<h2>Projekt <?php echo $this->project ?></h2>

<?php if ($this->project->isAllowed($this->currentUser, 'edit')): ?>
	<a href="<?php echo $this->project->getUrl('edit') ?>">Edytuj</a>
<?php endif ?>

<p>Kierownik: <?php echo $this->project->getManager() ?></p>
<p>Czas trwania: <span><?php echo $this->project->dateStart->get(Zend_Date::DATE_LONG) ?></span> - <span><?php echo $this->project->dateEnd->get(Zend_Date::DATE_LONG) ?></span></p>

<?php if ($this->project->groups): ?>
<h3>Grupy w projekcie:</h3>
<ul class="project-groups">
<?php foreach ($this->project->groups as $group): ?>
	<li><a href="<?php echo $this->url(array('controller' => 'groups', 'action' => 'show', 'id' => $group->id)) ?>"><?php echo $group ?></a></li>
<?php endforeach ?>
</ul>
<?php endif ?>